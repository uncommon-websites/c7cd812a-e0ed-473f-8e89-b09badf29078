        "prepare": {
            "name": "prepare",
            "command": "pnpm prepare"
        },
        "check": {
            "name": "check",
            "command": "pnpm check"
        },
        "check:watch": {
            "name": "check:watch",
            "command": "pnpm check:watch"
        },
        "format": {
            "name": "format",
